<%= form_with(model: @article, local: true, class: 'container mt-3') do |form| %>
  <% if @article.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@article.errors.count, 'error') %> prohibited this article from being saved:</h2>
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-4">
    <%= form.label :title, class: 'font-weight-bold' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :content, class: 'font-weight-bold' %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>

  <div class="form-actions">
    <%= form.submit 'Save Article', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', articles_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
